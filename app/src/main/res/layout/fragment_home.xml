<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="230dp">

        <com.youweihui.tourismstore.view.BannerView
            android:id="@+id/home_banner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/home_location"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="30dp"
            android:drawableLeft="@mipmap/ic_home_location"
            android:gravity="center"
            android:text="北京"
            android:textColor="@color/white" />

        <TextView
            android:layout_width="200dp"
            android:layout_height="30dp"
            android:layout_alignTop="@+id/home_location"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@+id/home_location"
            android:background="@drawable/shp_search_bg"
            android:drawableLeft="@mipmap/ic_home_search"
            android:gravity="center"
            android:paddingLeft="6dp"
            android:textColor="@color/white"
            android:textSize="12sp" />

        <ImageView
            android:layout_alignTop="@+id/home_location"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:src="@mipmap/ic_home_bell"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@color/white"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/home_linear"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginLeft="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="1dp"
                android:layout_weight="1"
                android:background="@mipmap/ic_home_1"
                android:gravity="center"
                android:text="亚洲"
                android:textColor="@color/white" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="1dp"
                android:layout_weight="1"
                android:background="@mipmap/ic_home_2"
                android:gravity="center"
                android:text="欧洲"
                android:textColor="@color/white" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="1dp"
                android:layout_weight="1"
                android:background="@mipmap/ic_home_3"
                android:gravity="center"
                android:text="非洲"
                android:textColor="@color/white" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:background="@mipmap/ic_home_3"
                android:gravity="center"
                android:text="美国"
                android:textColor="@color/white" />
        </LinearLayout>

        <View
            android:id="@+id/home_line"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/home_linear"
            android:background="@color/white" />

        <LinearLayout
            android:id="@+id/home_linear2"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_below="@+id/home_line"
            android:layout_marginLeft="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="1dp"
                android:layout_weight="1"
                android:background="@mipmap/ic_home_5"
                android:gravity="center"
                android:text="澳洲"
                android:textColor="@color/white" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="1dp"
                android:layout_weight="1"
                android:background="@mipmap/ic_home_6"
                android:gravity="center"
                android:text="国内"
                android:textColor="@color/white" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="1dp"
                android:layout_weight="1"
                android:background="@mipmap/ic_home_7"
                android:gravity="center"
                android:text="游轮"
                android:textColor="@color/white" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:background="@mipmap/ic_home_8"
                android:gravity="center"
                android:text="签证"
                android:textColor="@color/white" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/home_linear3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_below="@+id/home_linear2"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginLeft="10dp"
                android:src="@mipmap/test" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <com.youweihui.tourismstore.view.VerticalScrollView
                    android:id="@+id/home_scroll"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    android:layout_gravity="center_vertical"
                    app:vsl_animDuration="500"
                    app:vsl_isCusDuration="true"
                    app:vsl_sleepTime="2000" />

            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="250dp">


    </RelativeLayout>
</LinearLayout>
